<h1>Listing careers</h1>

<ul>
<% @careers.each do |career| %>
  <li>
    <%= career.name %>
    <%= link_to 'Show', career %>
    <%= link_to 'Edit', edit_career_path(career) %>
    <%= link_to 'Destroy', career, method: :delete, data: { confirm: 'Are you sure?' } %>
  </li>
<% end %>
</ul>
<br />

<%= link_to 'New Career', new_career_path %>
