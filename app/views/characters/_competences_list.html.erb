
<div id="competence_base" class="char_blck">
<h2>Competence de base</h2>
  <ul>
  <% @competences.each do |comp| %>
    <% if cc=@character.get_chara_comp(comp) %>
      <li class="have">
	<%= comp.name %>
	<%= c"(+#{cc.bonus}%)" %>
	<span class="dropt" title="Help">?
	<span style="width:500px;"><%= comp.description %></span>
	</span>
      </li>
    <% else %>
      <li class="no_have">
	<%= comp.name %>
	<span class="dropt" title="Help">?
	<span style="width:500px;"><%= comp.description %></span>
	</span>
      </li>
    <% end %>
  <% end %>
  </ul>
</div>

